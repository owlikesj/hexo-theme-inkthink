.main-navigation
	display: none


/* Off-Canvas Navigation */

.navigation-button
	right: 25px
	position: fixed
	top: 0
	z-index: 9999999
	margin-top: 25px
	background-color: rgba(0, 0, 0, .6)
	height: 40px
	padding-top: 10px
	.hamburger-inner
		background-color: #fff
		&::before, &::after
			background-color: #fff

.sidr
	background-color rgba(0, 0, 0, .6)
	color #fff
	// display none
	font-family Verdana, Geneva, sans-serif
	font-size 13px
	height 100%
	overflow-x none
	overflow-y auto
	position fixed
	top 0
	width 250px
	z-index 999999
	.sidr-inner
		padding 35px
	ul
		margin-left 0
		display block
		padding 0
		li
			display block
			margin 0
			a
				&:hover
					color #7b7b7b
			ul
				margin 0
				a
					&:before
						-webkit-font-smoothing antialiased
						display inline
						font-style normal
						font-smoothing antialiased
						font-weight normal
						line-height 1
						position relative
						text-align center
						text-decoration none
						text-rendering optimizeLegibility
						vertical-align text-top
						color #7b7b7b
						content 'L'
						margin-top 0
						padding-right 10px
	&.left
		left -260px
		right auto
	&.right
		left auto
		right -260px

.sidr ul li a,
.sidr ul li span
	color #fff
	text-decoration none
