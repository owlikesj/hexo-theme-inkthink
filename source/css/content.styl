.site-main
	background-color: #fff
	position: relative

.hentry
	background-color: #fff
	padding: 20px 0 40px
	border-bottom: 1px solid rgba(0,0,0, .08)

/*
 * Entry Header
 */

.entry-header
	margin-bottom 30px

.entry-title
	font-weight normal
	margin 0 0 5px
	text-align center
	margin 0 30px 30px
	color #141414
	padding-top 60px
	line-height 1.2em
	-ms-word-wrap break-word
	word-wrap break-word
	a
		color #141414
		&:hover
			color #4f4f4f
			text-decoration none

/*
 * Entry meta
 */

.entry-meta
	clear both
	font-size 14px
	color #919191
	text-align center
	padding 0 20px
	a
		color #c3c3c3
		&:hover
			color #ababab
			text-decoration none
	.icon
		width 1.2em
		height 1.2em
	& > span
		margin-right 20px
		&:last-child
			margin-right 0

.entry-content
	img
		max-width 100%

/*
 * Archive
 */
.post-list
	margin-left 0

.archive-count, .category-count, .tag-count
	&::before
		content '('
	&::after
		content ')'

/*
 * Code block
 */
figure.highlight
	margin-left 0
	margin-right 0
	overflow auto
	figcaption
		text-shadow 0 0 1px #fff
	table
		border-collapse: collapse
	.gutter
		width 40px
	pre
		font-family Consolas, monaco, monospace
		padding 0.5em
		background #23241f
		color #f8f8f2
		margin 0
	.line
		height 1.6em

pre
	.tag,
	.subst
		color #f8f8f2

	.strong,
	.emphasis
		color #a8a8a2

	.bullet,
	.quote,
	.number,
	.regexp,
	.literal,
	.link
		color #ae81ff

	.code,
	.title,
	.section,
	.selector-class
		color #a6e22e

	.strong
		font-weight bold

	.emphasis
		font-style italic

	.keyword,
	.selector-tag,
	.name,
	.attr
		color #f92672

	.symbol,
	.attribute
		color #66d9ef

	.params,
	.class .title
		color #f8f8f2

	.string,
	.type,
	.built_in,
	.builtin-name,
	.selector-id,
	.selector-attr,
	.selector-pseudo,
	.addition,
	.variable,
	.template-variable
		color #e6db74

	.comment,
	.deletion,
	.meta
		color #75715e
