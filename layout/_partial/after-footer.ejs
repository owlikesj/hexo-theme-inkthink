<%- partial('_partial/svg-icons') %>
<!-- Include jQuery -->
<script src="//cdn.jsdelivr.net/jquery/2.2.0/jquery.min.js"></script>
<!-- Include the Sidr JS -->
<script src="//cdn.jsdelivr.net/jquery.sidr/2.2.1/jquery.sidr.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/featherlight/1.7.7/featherlight.min.js" type="text/javascript" charset="utf-8"></script>
<script>
	$(document).ready(function() {
		$navBtn = $('.navigation-button')
		$navBtn.sidr({
			name: 'sidr-main',
			side: 'right',
			source: '#site-navigation',
			renaming: false,
			displace: false,
			onOpen: function() {
				$navBtn.addClass('is-active')
			},
			onClose: function() {
				$navBtn.removeClass('is-active')
			}
		})

		var offsetTop = $('#primary')[0].offsetTop
		$('.menu-scroll-down').click( function( e ) {
			e.preventDefault()
			$('html, body').animate({
				scrollTop : offsetTop
			}, 600)
			return false
		})

		//Back to top
		$('.scrolltop').click(function() {
			$('html, body').animate({
				scrollTop : 0
			}, 1500)
			return false
		})
	})
</script>